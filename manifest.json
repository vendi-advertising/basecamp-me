{
  "manifest_version": 3,
  "name": "Basecamp Todo Highlighter",
  "version": "1.0.2",
  "description": "Highlights your assigned todos in Basecamp projects",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://3.basecamp.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "webteam-basecamp-todo-highlighter@vendiadvertising.com",
      "strict_min_version": "57.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
